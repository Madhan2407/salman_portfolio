<style>
  .education {
    padding: 6rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    text-align: center;
    font-size: 3rem;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 3rem;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(135deg, #3b82f6, #7c3aed);
    border-radius: 2px;
  }

  .education-timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto 4rem;
    padding-left: 2rem;
  }

  .education-timeline::before {
    content: '';
    position: absolute;
    left: 1rem;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(135deg, #3b82f6, #7c3aed);
    border-radius: 2px;
  }

  .education-item {
    position: relative;
    margin-bottom: 3rem;
  }

  .education-dot {
    position: absolute;
    left: -2.75rem;
    top: 1rem;
    width: 16px;
    height: 16px;
    background: linear-gradient(135deg, #3b82f6, #7c3aed);
    border-radius: 50%;
    border: 4px solid white;
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.2);
  }

  .education-content {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.1);
    transition: all 0.3s ease;
  }

  .education-content:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    border-color: rgba(59, 130, 246, 0.3);
  }

  .education-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .degree-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #1f2937;
    line-height: 1.3;
    flex: 1;
  }

  .education-period {
    background: linear-gradient(135deg, #3b82f6, #7c3aed);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .institution {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2563eb;
    margin-bottom: 1rem;
  }

  .education-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cgpa {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cgpa-label {
    font-weight: 600;
    color: #374151;
  }

  .cgpa-value {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .specialization,
  .achievement {
    color: #6b7280;
    line-height: 1.6;
    font-style: italic;
  }

  .academic-highlights {
    margin-top: 4rem;
  }

  .highlights-title {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 2rem;
  }

  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .highlight-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .highlight-card:hover {
    transform: translateY(-5px);
    border-color: #3b82f6;
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
  }

  .highlight-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .highlight-card h4 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .highlight-card p {
    color: #6b7280;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }

    .education-timeline {
      padding-left: 1.5rem;
    }

    .education-dot {
      left: -2.25rem;
    }

    .education-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .degree-title {
      font-size: 1.2rem;
    }

    .education-content {
      padding: 1.5rem;
    }

    .highlights-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
